#############################################
# n8n Environment Example
# Copy to .env and adjust values
#############################################

# Core URL / Host settings (adjust for production domain)
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# Basic Auth (disable if using reverse proxy auth / SSO)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change_me_now

# Encryption key (REQUIRED for credential security). Must be 32+ chars.
# Generate: openssl rand -base64 48 | tr -d '\n'
N8N_ENCRYPTION_KEY=PLEASE_REPLACE_WITH_LONG_RANDOM_SECRET_VALUE

# Execution / telemetry
EXECUTIONS_MODE=regular
N8N_METRICS=true

# Timezones
TZ=UTC
GENERIC_TIMEZONE=UTC

# Database (Postgres) - if not set, internal SQLite (NOT recommended for production) may be used.
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8npass

# Optional: External Queue / Redis (uncomment if configuring scaling)
# QUEUE_BULL_REDIS_HOST=redis
# QUEUE_BULL_REDIS_PORT=6379

# Puppeteer / Chromium (already set inside image but can override)
# PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
# CHROMIUM_FLAGS=--no-sandbox --disable-dev-shm-usage

# n8n version override (used in compose build args optionally)
N8N_VERSION=1.52.4

#############################################